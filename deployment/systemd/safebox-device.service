[Unit]
Description=SafeBox Device Orchestrator
After=network.target safebox-cloud.service
Requires=safebox-cloud.service

[Service]
Type=simple
User=vaibhav
WorkingDirectory=/opt/safebox
EnvironmentFile=/etc/safebox/safebox.env
Environment=PYTHONPATH=/opt/safebox
ExecStartPre=/bin/sleep 3
ExecStart=/opt/safebox/venv/bin/python -m core.device_controller

Restart=always
RestartSec=2
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
